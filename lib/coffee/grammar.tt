grammar Coffee

  rule code
    expression newline* <Code>
  end

  rule expression
    addition
  end

  rule addition
    multiplication '+' addition <Addition> /
    multiplication '-' addition <Subtraction> /
    multiplication
  end

  rule multiplication
    primary '*' multiplication <Multiplication> /
    primary '/' multiplication /
    primary '%' multiplication /
    primary
  end

  rule primary
    '(' expression ')' <Code> /
    number
  end

  rule number
    [1-9]+ <Number>
  end

  rule space
    [ \t]*
  end

  rule newline
    space ("\r\n"+ / [\r\n]+ / ";") space
  end

end
